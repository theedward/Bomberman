<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.cmov.bomberman.controller.CreateServerActivity"
    android:background="@drawable/background_wallpaper"
    >

    <TextView
        android:id="@+id/choose_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/choose_username"
        android:textSize="26sp"
        android:textColor="@android:color/white"
        android:layout_marginTop="130dp"
        android:layout_centerHorizontal="true"
        />

    <EditText
        android:id="@+id/choose_server_editable"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/choose_username"
        android:layout_marginTop="10dp"
        android:hint="@string/enter_username_here"
        />


    <Button
        android:background="@drawable/yellow_button"
        android:id="@+id/accept"
        android:layout_width="200dp"
        android:layout_below="@id/choose_server_editable"
        android:layout_marginTop="70dp"
        android:text="@string/accept"
        style="@style/ButtonText"
        android:onClick="accept"
        />

</RelativeLayout>
