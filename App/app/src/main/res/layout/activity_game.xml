<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context=".GameActivity">


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/linear_layout">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:text="@string/player_name"
                android:textSize="18sp"
                android:gravity="center"
                android:id="@+id/playerName"
                android:layout_weight="1"
                android:background="@drawable/border"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:text="@string/player_score"
                android:textSize="18sp"
                android:gravity="center"
                android:id="@+id/playerScore"
                android:layout_weight="1"
                android:background="@drawable/border"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:text="@string/time_left"
                android:textSize="18sp"
                android:gravity="center"
                android:id="@+id/timeLeft"
                android:layout_weight="1"
                android:background="@drawable/border"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:text="@string/number_player"
                android:textSize="18sp"
                android:gravity="center"
                android:id="@+id/numPlayers"
                android:layout_weight="1"
                android:background="@drawable/border"/>
    </LinearLayout>

    <view
            class="com.cmov.bomberman.controller.GameView"
            android:id="@+id/canvas"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_below="@id/linear_layout"
            android:layout_marginTop="10dp"/>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/canvas">

        <Button
                android:onClick="pressedPause"
                android:text="@string/pause"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"/>

        <Button
                android:onClick="pressedQuit"
                android:text="@string/quit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"/>

        <Button
                android:onClick="pressedArrowUp"
                android:text="@string/arrowUp"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_marginLeft="150dp"/>

        <Button
                android:onClick="pressedArrowLeft"
                android:text="@string/arrowLeft"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_marginTop="35dp"
                android:layout_marginLeft="100dp"/>

        <Button
                android:onClick="pressedArrowDown"
                android:text="@string/arrowDown"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_marginTop="70dp"
                android:layout_marginLeft="150dp"/>

        <Button
                android:onClick="pressedArrowRight"
                android:text="@string/arrowRight"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_marginTop="35dp"
                android:layout_marginLeft="200dp"/>

        <Button
                android:onClick="pressedBomb"
                android:text="@string/bomb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="30dp"/>
    </RelativeLayout>
</RelativeLayout>
