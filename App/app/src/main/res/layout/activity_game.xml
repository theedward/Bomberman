<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".GameActivity" >


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/linear_layout">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:text="@string/player_name"
                android:textSize="20sp"
                android:gravity="center"
                android:id="@+id/textView"
                android:layout_weight="1"
                android:background="@drawable/border"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:text="@string/player_score"
                android:textSize="20sp"
                android:gravity="center"
                android:id="@+id/textView2"
                android:layout_weight="1"
                android:background="@drawable/border"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:text="@string/time_left"
                android:textSize="20sp"
                android:gravity="center"
                android:id="@+id/textView3"
                android:layout_weight="1"
                android:background="@drawable/border"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:text="@string/number_player"
                android:textSize="20sp"
                android:gravity="center"
                android:id="@+id/textView4"
                android:layout_weight="1"
                android:background="@drawable/border"/>
    </LinearLayout>

    <SurfaceView
            android:id="@+id/canvas"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_below="@id/linear_layout"
            android:layout_marginTop="10dp"/>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/canvas">

        <Button
                android:id="@+id/pauseBtn"
                android:text="@string/pause"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"/>

        <Button
                android:id="@+id/quitBtn"
                android:text="@string/quit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"/>

        <Button
                android:id="@+id/arrowUpBtn"
                android:text="@string/arrowUp"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_marginLeft="150dp"/>

        <Button
                android:id="@+id/arrowLeftBtn"
                android:text="@string/arrowLeft"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_marginTop="35dp"
                android:layout_marginLeft="100dp"/>

        <Button
                android:id="@+id/arrowDownBtn"
                android:text="@string/arrowDown"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_marginTop="70dp"
                android:layout_marginLeft="150dp"/>

        <Button
                android:id="@+id/arrowRightBtn"
                android:text="@string/arrowRight"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_marginTop="35dp"
                android:layout_marginLeft="200dp"/>

        <Button
                android:id="@+id/bombBtn"
                android:text="@string/bomb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="30dp"/>
    </RelativeLayout>
</RelativeLayout>
