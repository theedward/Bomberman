<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.cmov.bomberman.controller.JoinServerActivity"
    android:background="@drawable/background_wallpaper"
    >

    <TextView
        android:id="@+id/choose_username_join"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/chose_username"
        android:textSize="26sp"
        android:textColor="@android:color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        />

    <EditText
        android:id="@+id/chose_username_editable_join"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/choose_username_join"
        android:layout_marginTop="10dp"
        android:hint="@string/enter_username_here"
        />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_below="@id/chose_username_editable_join"
        android:id="@+id/listView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        />

    <Button
        android:background="@drawable/yellow_button"
        android:id="@+id/accept_join"
        android:layout_width="200dp"
        android:layout_below="@id/listView"
        android:text="@string/accept"
        style="@style/ButtonText"
        android:onClick="accept"
        android:layout_marginTop="30dp"
        />


</RelativeLayout>
