<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.meic.cmov.bomberman"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.meic.cmov.bomberman.InitialActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.meic.cmov.bomberman.NewGameActivity"
            android:label="@string/title_activity_new_game" >
        </activity>
        <activity
            android:name="com.meic.cmov.bomberman.MultiplayerActivity"
            android:label="@string/title_activity_multiplayer" >
        </activity>
        <activity
            android:name="com.meic.cmov.bomberman.AboutActivity"
            android:label="@string/title_activity_about" >
        </activity>
    </application>

</manifest>
