<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context=".NewGameActivity" >

    <NumberPicker
        android:id="@+id/levelPicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="42dp" />

    <NumberPicker
        android:id="@+id/diffPicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/levelPicker"
        android:layout_marginRight="46dp" />

    <TextView
        android:id="@+id/difficulty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/level"
        android:layout_alignBottom="@+id/level"
        android:layout_alignLeft="@+id/diffPicker"
        android:text="Difficulty"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="25sp" 
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/levelPicker"
        android:layout_alignLeft="@+id/levelPicker"
        android:layout_alignRight="@+id/levelPicker"
        android:layout_marginBottom="21dp"
        android:text="Level"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="25sp" 
        android:textColor="@color/white"
        />

</RelativeLayout>
